{
  "name": "soda3-query",
  "version": "0.5.0",
  "description": "SODA (Socrata) query client for NodeJS. Compatible with SODA 3",
  "author": "Graham Place <grahamplace.work@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grahamplace/soda3-query.git"
  },
  "keywords": [
    "soda",
    "soda3",
    "socrata",
    "query",
    "client",
    "nodejs"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/grahamplace/soda3-query/issues"
  },
  "homepage": "https://github.com/grahamplace/soda3-query#readme",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest --coverage",
    "test:live-integration": "ENABLE_REAL_API_TESTS=true vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ignore-pattern 'dist/**'",
    "lint-staged": "lint-staged",
    "format": "prettier . --write",
    "prepare": "husky",
    "prepublishOnly": "npm run lint && npm test",
    "version": "npm run build",
    "postversion": "git push --tags || true"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@vitest/coverage-istanbul": "^4.0.16",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nock": "^13.5.5",
    "prettier": "^3.6.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^4.0.13"
  }
}
